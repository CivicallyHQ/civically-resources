{{d-button action='add' icon='plus' label='resource.add'}}

{{#if adding}}
  {{input value=link}}

  {{#if sending}}
    {{loading-spinner size='small'}}
  {{else}}
    {{#if resultIcon}}
      {{d-icon resultIcon}}
    {{else}}
      {{d-button action="submit" icon="envelope" label='submit' disabled=submitDisabled}}
    {{/if}}
  {{/if}}
{{/if}}
